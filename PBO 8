 */
import java.utill.Scanner;

public class PlantMain {
    public static void main(String[] args) {
        Plant p = new plant();
        Scanner sc = New Scanner (System.in);
        int inp = 0;
        do {
            System.out.println("Masukkan : 0 Untuk memberi air, 1 Untuk memberi pupuk, 2 Untuk cek kondisi tumbuh, 3 untuk tumbuh, 4 Untuk tampilan tumbuhan")
            inp = sc.nextInt();
            switch(inp){
                case 0; p.beriAir();
                    break;
                case 1; p.beriPupuk();
                    break;
                case 2; p.cekKondisiTumbuh();
                    break;
                case 3; p.tumbuh();
                    break;
                case 4; p.displayPlant();
                    break;
            }
            p.displayPlant();
            
        }while (inp!=999);
    }
    
}

